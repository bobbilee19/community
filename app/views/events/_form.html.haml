= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :theme
    = f.text_field :theme
  .field
    = f.label :venue_name
    = f.text_field :venue_name
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :venue_contact_email
    = f.text_field :venue_contact_email
  .field
    = f.label :venue_contact_name
    = f.text_field :venue_contact_name
  .field
    = f.label :rent_again
    = f.check_box :rent_again
  .actions
    = f.submit 'Save'
